{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/vue3-essential",
    "eslint:recommended",
    "@vue/typescript/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    //"no-console": process.env.NODE_ENV === "production" ? "warn" : "off",
    "no-console": "warn",
    "no-debugger": "warn",
    "semi": ["warn", "always"],
    "comma-dangle": ["warn", "always-multiline"],
    "quotes": ["warn", "double"],
    "indent": ["warn", 4]
  },
  "overrides": [
    {
     "files": [
        "**/__tests__/*.{j,t}s?(x)",
        "**/tests/unit/**/*.spec.{j,t}s?(x)"
      ],
      "env": {
        "mocha": true
      }
    }
  ]
}
